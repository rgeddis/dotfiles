	email = ross.geddis@cardinalanalytics.co
[core]
    editor = vim
    whitespace = trailing-space, space-before-tab
[merge]
    tool = kdiff3
[format]
    headers = "Organization: Cardinal Analytics\n"
    numbered = auto
    signoff = true
    coverletter = auto
    keepsubject = true
[pull]
    rebase = true
[push]
    followtags = true
    default = simple
    followtags = true
[pull]
    rebase = true
